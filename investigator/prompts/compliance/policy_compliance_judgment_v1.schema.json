{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["pass_fail", "confidence", "remediation", "rationale", "gaps"],
  "properties": {
    "pass_fail": {
      "type": "string",
      "enum": ["pass", "fail", "not_applicable", "insufficient_evidence"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "remediation": {
      "type": "string",
      "minLength": 1
    },
    "rationale": {
      "type": "string",
      "minLength": 1
    },
    "gaps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
