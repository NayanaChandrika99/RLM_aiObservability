{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["incident_summary", "hypotheses", "recommended_actions", "gaps"],
  "properties": {
    "incident_summary": {
      "type": "string",
      "minLength": 1
    },
    "hypotheses": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["statement", "confidence"],
        "properties": {
          "statement": {
            "type": "string",
            "minLength": 1
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "additionalProperties": false
      }
    },
    "recommended_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["priority", "type", "action"],
        "properties": {
          "priority": {
            "type": "string",
            "enum": ["P0", "P1", "P2"]
          },
          "type": {
            "type": "string",
            "enum": ["mitigation", "follow_up_fix"]
          },
          "action": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "gaps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
